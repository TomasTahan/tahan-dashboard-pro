{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false
  },
  "include": [
    "**/*.ts",
    "../lib/odoo/**/*.ts",
    "../lib/openai/**/*.ts",
    "../lib/supabase/database.types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../lib/supabase/client.ts",
    "../lib/supabase/server.ts",
    "../lib/supabase/middleware.ts",
    "../lib/temporal-client.ts",
    "../lib/utils.ts"
  ]
}
