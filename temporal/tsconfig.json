{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["../*"]
    },
    "types": ["node"]
  },
  "include": [
    "**/*.ts",
    "../lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
